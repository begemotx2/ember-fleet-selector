<h2 id="title">Welcome to Ember</h2>

{{#fleet-selector model=model childKey='fleet' as |sites|}}
    {{#sites.selector 
        label="Sites" 
        options=sites.items 
        value=site
        onSelect=(action 'selectSite') 
        childKey="plants"
        as |plants|}}
        {{#plants.selector 
            label="Plants" 
            options=plants.items 
            value=plant 
            onSelect=(action 'selectPlant') 
            childKey="units"
            as |units|
        }}
            {{units.selector label="Units" 
                options=units.items 
                value=unit 
                onSelect=(action 'selectUnit')}}
        {{/plants.selector}}
    {{/sites.selector}}
{{/fleet-selector}}